<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Penjual"
    android:weightSum="1">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg2"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/LYbtnptnjk"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="1">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Petunjuk"
                android:textColor="#fff"
                android:textSize="50dp"
                android:textStyle="bold"
                android:id="@+id/TOKO"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtptnjk"
                android:textColor="#fff"
                android:clickable="false"
                android:id="@+id/tokoterdekat"
                android:linksClickable="true"
                android:textSize="20dp"
                android:layout_alignBottom="@+id/RAM"
                android:layout_marginBottom="5dp"/>

                <WebView
                    android:id="@+id/mWebView"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">
                </WebView>




        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/LYbtnptnjk">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Saya mengerti"
            android:onClick="sendTabs"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/button4"
            android:layout_below="@+id/tipsRgroup"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
</RelativeLayout>
