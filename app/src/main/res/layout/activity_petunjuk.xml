<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".Penjual"
    android:weightSum="1">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/LYbtnptnjk">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Petunjuk"
                android:textSize="50dp"
                android:textStyle="bold"
                android:id="@+id/TOKO"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtptnjk"
                android:clickable="false"
                android:id="@+id/tokoterdekat"
                android:linksClickable="true"
                android:textSize="20dp"
                android:layout_alignBottom="@+id/RAM"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.79"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=".tidak ada video petunjuk"
                    android:textColor="#37ff00" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/LYbtnptnjk">
        <Button
            android:background="@color/colorAccent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:onClick="sendTabs"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/button4"
            android:layout_below="@+id/tipsRgroup"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>
