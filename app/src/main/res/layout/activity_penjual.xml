<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".Penjual">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Toko Terdekat"
        android:textSize="50dp"
        android:textStyle="bold"
        android:id="@+id/TOKO"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GIGANTIC: Jln. Raya Industri Cikarang\n\nCIBITUNG KOMPUTER: Jln. H. Saimun Cibitung"
        android:clickable="false"
        android:id="@+id/tokoterdekat"
        android:linksClickable="true"
        android:autoLink="web"
        android:layout_alignBottom="@+id/RAM"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Online"
        android:textSize="50dp"
        android:textStyle="bold"
        android:id="@+id/ONLINE"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER KOMPUTER: http://goo.gl/K7skO"
        android:clickable="false"
        android:id="@+id/enter"
        android:linksClickable="true"
        android:autoLink="web"
        android:layout_alignBottom="@+id/RAM"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAKITAN: http://goo.gl/jG942"
        android:clickable="false"
        android:id="@+id/quantum"
        android:linksClickable="true"
        android:autoLink="web"
        android:layout_marginBottom="5dp"/>

    <Button
        android:textSize="20dp"
        android:background="#07cf00"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CEK GOOGLE MAPS"
        android:id="@+id/buttonGmaps"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
    </ScrollView>
</LinearLayout>
